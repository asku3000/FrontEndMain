<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	<!-- Executed when webFlow is triggered -->
	<on-start>
		<!-- handler is java class available through annotated Demohandler.java 
			class.here we are calling itâ€™s initFlow() method. -->
		<evaluate expression="sellerHandler.initFlow()" result="flowScope.user" />
	</on-start>

	<!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="suppliersignup" model="flowScope.user">
		<transition on="submit" to="validate" />
	</view-state>

	<action-state id="validate">
		<evaluate expression="sellerHandler.validateDetails(user,messageContext)"></evaluate>
		<transition on="success" to="confirmDetails1" />
		<transition on="failure" to="start" />
	</action-state>

	<view-state id="confirmDetails1" view="confirmDetails1" model="flowScope.user">
		<transition on="edit" to="start" />
		<transition on="submit" to="saveuser" />
	</view-state>

	<action-state id="saveuser">
		<evaluate expression="sellerHandler.saveUser(user)"></evaluate>
		<transition on="success" to="index" />
		<transition on="failure" to="start" />
	</action-state>

	<end-state id="index" view="index" />
	<end-state id="toHome" view="externalRedirect:contextRelative:index.jsp" />
	<end-state id="toException"
		view="externalRedirect:contextRelative:exception.jsp" />

	<!-- these events are available in every state -->
	<global-transitions>
		<transition on="home" to="toHome" />
		<transition on="error" to="toException" />
	</global-transitions>

</flow>